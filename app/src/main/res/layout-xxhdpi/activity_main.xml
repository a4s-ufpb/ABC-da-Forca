<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tcc.ufpb.com.br.tcc.activity.MainActivity"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:id="@+id/logoMenu"
        android:src="@drawable/logo"
        android:layout_above="@+id/botaoJogar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infomenu"
        android:src="@drawable/info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoTutorial"
        android:src="@drawable/tutorialicon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoConfigurar"
        android:src="@drawable/botaoconfigurar"
        android:background="@android:color/transparent"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_above="@+id/botaoTutorial"
        android:layout_toRightOf="@+id/botaoJogar"
        android:layout_toEndOf="@+id/botaoJogar" />

    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botaoJogar"
        android:src="@drawable/botaoplay"
        android:background="@android:color/transparent"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:layout_alignTop="@+id/botaoConfigurar"
        android:layout_alignLeft="@+id/logoMenu"
        android:layout_alignStart="@+id/logoMenu" />
</RelativeLayout>
