<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fim da rodada!"
        android:textSize="40dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:orientation="horizontal"
        >



        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:src="@drawable/estrela2acertos"
            android:id="@+id/estrelafeedback"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/botaohome"
            android:id="@+id/botaoHome"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/restart_button"
            android:layout_marginLeft="30dp"
            android:id="@+id/botaoNovaRodada"/>
    </LinearLayout>

</LinearLayout>