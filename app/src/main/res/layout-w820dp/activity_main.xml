<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tcc.ufpb.com.br.tcc.activity.MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="320dp"
        android:id="@+id/logoMenu"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/infomenu"
        android:src="@drawable/info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/botaoTutorial"
        android:src="@drawable/tutorialicon"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/botaoJogar"
        android:src="@drawable/botaoplay"
        android:background="@android:color/transparent"
        android:layout_marginLeft="145dp"
        android:layout_marginStart="145dp"
        android:layout_below="@+id/logoMenu"
        android:layout_alignLeft="@+id/logoMenu"
        android:layout_alignStart="@+id/logoMenu" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/botaoConfigurar"
        android:src="@drawable/botaoconfigurar"
        android:background="@android:color/transparent"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_below="@+id/logoMenu"
        android:layout_toRightOf="@+id/botaoJogar"
        android:layout_toEndOf="@+id/botaoJogar" />

</RelativeLayout>
